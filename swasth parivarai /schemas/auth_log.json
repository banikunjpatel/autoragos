{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "auth_log.json",
	"title": "AuthLog",
	"type": "object",
	"additionalProperties": false,
	"properties": {
		"userId": { "type": "string" },
		"mobile": { "type": "string" },
		"event": { "type": "string", "enum": ["otp_sent", "otp_verified", "login", "logout", "token_refresh", "login_failed", "otp_failed"] },
		"ip": { "type": "string" },
		"userAgent": { "type": "string" },
		"deviceInfo": { "type": "object" },
		"meta": { "type": "object" },
		"createdAt": { "type": "string", "format": "date-time" }
	},
	"required": ["event"]
}
