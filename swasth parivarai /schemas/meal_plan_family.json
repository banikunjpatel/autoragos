{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "meal_plan_family.json",
  "title": "Weekly Meal Plan (Single or Family)",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "weekStart": { "type": "string", "format": "date" },
    "region": { "type": "string", "minLength": 1 },
    "dietType": { "type": "string", "enum": ["veg", "non_veg", "eggs_ok"] },
    "household": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": { "type": "string", "enum": ["single", "family"] },
        "size": { "type": "integer", "minimum": 1 },
        "members": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "name": { "type": "string", "minLength": 1 },
              "dosha": { "type": "string", "enum": ["vata", "pitta", "kapha", "tridoshic"] }
            },
            "required": ["name", "dosha"]
          }
        }
      },
      "required": ["type", "size", "members"]
    },
    "days": {
      "type": "array",
      "minItems": 7,
      "maxItems": 7,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "date": { "type": "string", "format": "date" },
          "breakfast": { "$ref": "#/$defs/meal" },
          "lunch": { "$ref": "#/$defs/meal" },
          "dinner": { "$ref": "#/$defs/meal" },
          "notes": { "type": "string" }
        },
        "required": ["date", "breakfast", "lunch", "dinner"]
      }
    },
    "groceryList": {
      "type": "array",
      "items": { "$ref": "#/$defs/grocery" }
    }
  },
  "required": ["weekStart", "region", "dietType", "household", "days", "groceryList"],
  "$defs": {
    "ingredient": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "qty": { "type": "number", "minimum": 0 },
        "unit": { "type": "string", "minLength": 1 },
        "category": {
          "type": "string",
          "enum": ["produce", "grains", "dairy", "spices", "protein", "staples", "bakery", "condiments", "other"]
        }
      },
      "required": ["name", "qty", "unit"]
    },
    "recipe": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "ingredients": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/ingredient" }
        },
        "steps": {
          "type": "array",
          "minItems": 3,
          "maxItems": 20,
          "items": { "type": "string", "minLength": 1 }
        },
        "prep_mins": { "type": "integer", "minimum": 0 },
        "cook_mins": { "type": "integer", "minimum": 0 }
      },
      "required": ["ingredients", "steps", "prep_mins", "cook_mins"]
    },
    "meal": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "serving_size": { "type": "integer", "minimum": 1 },
        "recipe": { "$ref": "#/$defs/recipe" }
      },
      "required": ["name", "serving_size", "recipe"]
    },
    "grocery": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "qty": { "type": "number" },
        "unit": { "type": "string", "minLength": 1 },
        "category": {
          "type": "string",
          "enum": ["produce", "grains", "dairy", "spices", "protein", "staples", "bakery", "condiments", "other"]
        }
      },
      "required": ["name", "qty", "unit"]
    }
  }
}